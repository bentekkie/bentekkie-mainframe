{
    "gopls": {
      "build.directoryFilters": [
        "-bazel-bin",
        "-bazel-out",
        "-bazel-testlogs",
        "-bazel-bentekkie-mainframe",
      ],
      "formatting.gofumpt": true,
      "formatting.local": "github.com/bentekkie/bentekkie-mainframe",
      "ui.completion.usePlaceholders": true,
      "ui.semanticTokens": true,
      "ui.codelenses": {
        "gc_details": false,
        "regenerate_cgo": false,
        "generate": false,
        "test": false,
        "tidy": false,
        "upgrade_dependency": false,
        "vendor": false
      },
      "ui.diagnostic.staticcheck": false,
    },
    "go.useLanguageServer": true,
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "bazel.pathsToIgnore": [
      "bazel-bin",
      "bazel-out",
      "bazel-testlogs",
      "bazel-bentekkie-mainframe",
    ]
  }