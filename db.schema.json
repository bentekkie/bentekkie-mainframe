{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Folder",
  "definitions": {
    "Folder": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[^\\s]*$"
        },
        "folders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Folder"
          }
        },
        "files": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/File"
          }
        }
      },
      "required": [
        "files",
        "folders",
        "name"
      ],
      "title": "Folder"
    },
    "File": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[^\\s]*$"
        },
        "contents": {
          "type": "string"
        }
      },
      "required": [
        "contents",
        "name"
      ],
      "title": "File"
    }
  }
}
